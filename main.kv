TabbedPanel:
    do_default_tab: False
    tab_width: 300
    tab_pos: "top_mid"

    ##「Monitor Setting」タブ内のUI
    TabbedPanelItem:
        text: "Monitor Setting"
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                orientation: "vertical"

                Label:
                    text: "Time"
                    size_hint_y: 0.25
                    text_size: self.size
                    font_size: 34
                    halign: "center"
                    valign: "bottom"
                
                Label:
                    id: time
                    text: "00:00:00"
                    size_hint_y: 0.25
                    text_size: self.size
                    font_size: 50
                    halign: "center"
                    valign: "top"

                Button:
                    id: "sysinfo"
                    text: "System Infomation"
                    size_hint_y: 0.5

            BoxLayout:
                orientation: "vertical"

                Button:
                    id: "cpu"
                    text: "CPU Clock/Temp/Usage"
                    size_hint_y: 0.5

                Button:
                    id: "ram"
                    text: "RAM Speed/Usage"
                    size_hint_y: 0.5

    ##「Connection Setting」タブ内のUI
    TabbedPanelItem:
        text: "Connection Setting"
        
        BoxLayout:
            orientation: "vertical"
        
            Label:
                text: "Client's IP Address"
                size_hint_y: 0.25

            TextInput:
                text: "127.0.0.1"
                size_hint_y: 0.25
            
            Button:
                text: "Set Client IP Addr"
                size_hint_y: 0.5